<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".model.bottomnav.InputFragment">

    <TextView
        android:id="@+id/inputTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Input Fragment"
        android:textSize="24sp"
        android:text="Input Fragment" />

    <Button
        android:id="@+id/startRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_record"
        android:drawableLeft= "@drawable/ic_mic"
        android:textSize="19sp"
        android:textAllCaps="false"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@+id/inputTitle"
        app:layout_constraintStart_toStartOf="@id/inputTitle"
        app:layout_constraintEnd_toEndOf="@id/inputTitle"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/stopRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_stop"
        android:drawableLeft= "@drawable/ic_baseline_stop_circle_24"
        android:gravity="center"
        android:textSize="19sp"
        android:textAllCaps="false"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/startRecord"
        app:layout_constraintStart_toStartOf="@id/startRecord"
        app:layout_constraintEnd_toEndOf="@+id/startRecord"
        />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/red"
        android:hint="@string/button_submit"
        android:textColorHint="@color/white"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/stopRecord" />
</androidx.constraintlayout.widget.ConstraintLayout>